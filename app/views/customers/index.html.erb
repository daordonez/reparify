<div class="container-fluid">

  <!-- alertas -->
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  
  <!-- Busqueda de clientes -->
  <div class="row">
    <div class="col-md-12 d-flex justify-content-end">
        <%= form_tag(customers_path , method: :get) do%>
           DNI <%= text_field_tag :dni, params[:dni]%>
           <%= submit_tag 'Buscar', name: nil %>
        <% end %>
    </div>
  </div>

  <!-- InformaciÃ³n principal -->
  <div class="row">
    <div class="col-md-12">

      <h1>Clientes</h1>



<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre apellido1</th>
      <th>Nombre apellido2</th>
      <th>Nombre primero</th>
      <th>DNI</th>
      <th>Direccion completa</th>
      <th>Cp</th>
      <th>Ppoblacion</th>
      <th>Formapago hab</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id%></td>
        <td><%= customer.nombre_apellido1 %></td>
        <td><%= customer.nombre_apellido2 %></td>
        <td><%= customer.nombre_primero %></td>
        <td><%= customer.dni %></td>
        <td><%= customer.direccion_completa %></td>
        <td><%= customer.cp %></td>
        <td><%= customer.ppoblacion %></td>
        <td><%= customer.formapago_hab %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>

  <div class="row">
    <div class="col-col-md-12 d-flex justify-content-end">
      <%= link_to 'Nuevo Cliente', new_customer_path, :class => 'btn btn-success' %>
    </div>
  </div>



</div>