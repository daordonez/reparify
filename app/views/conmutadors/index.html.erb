<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 d-flex justify-content-center">
      <h1>Bienvenido a Reparify</h1>
    </div>
    <div class="col-md-12 d-flex justify-content-center border border-info mt-10">


      <div class="card mr-5" style="width: 18rem;">
        <%= image_tag("fact.png", :alt => "Card image cap", :class => 'card-img-top') %>
        <div class="card-body">
          <h5 class="card-title">Facturación</h5>
          <p class="card-text">Elaboración de facturas</p>
          <%= link_to 'Facturación', new_invoice_path , :class => 'btn btn-primary'%>
        </div>
      </div>

      <div class="card mr-5" style="width: 18rem;">
        <%= image_tag("cli.png", :alt => "Card image cap", :class => 'card-img-top') %>
        <div class="card-body">
          <h5 class="card-title">Clientes</h5>
          <p class="card-text">Gestión de clientes</p>
          <%= link_to 'Clientes', customers_path , :class => 'btn btn-primary'%>
        </div>
      </div>

      <div class="card mr-5" style="width: 18rem;">
        <%= image_tag("test.png", :alt => "Card image cap", :class => 'card-img-top') %>
        <div class="card-body">
          <h5 class="card-title">Testeo</h5>
          <p class="card-text">Registro y seguimiento de los protocoles de testeo de dispositivos</p>
          <%= link_to 'Testeo', tests_path , :class => 'btn btn-primary'%>
        </div>
      </div>


      <div class="card" style="width: 18rem;">
        <%= image_tag("administrator.png", :alt => "Card image cap", :class => 'card-img-top') %>
        <div class="card-body">
          <h5 class="card-title">Admin</h5>
          <p class="card-text">Privilegios de administrador necesarios</p>
          <%= link_to 'Panel administración', admin_path , :class => 'btn btn-primary'%>
        </div>
      </div>


    </div>
  </div>
  <!-- Tablas info -->
  <div class="row"></div>
    <div class=" offset-md-1 col-md-4">
      <p>Numero de clientes en BD: <%= @customers.count%></p>
    </div>
</div>















